.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:talks, :index)
      %li=link_to pat(:new), url(:talks, :new)
      %li.active=link_to pat(:edit), url(:talks, :edit, :id => @talk.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:talk)
    .inner
      -form_for :talk, url(:talks, :update, :id => @talk.id), :method => :put, :class => :form, :multipart => true do |f|
        =partial "talks/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")

%span.title Talks
%a#tb{:href => '/'} Go back to homepage
%hr
- if not @warn.nil?
  .warn
    =@warn
- @talks.each do |talk|
  .talk-box
    .right-t
      =link_to image_tag("#{talk.thumb.url}", {:height => 80, :width => 133}), "/talks/#{talk.id}"
    .left-t
    %span.talk_name
      = link_to talk.title, "/talks/#{talk.id}"
    %br
    %span.date
      = talk.date.strftime '%A %B %d, %Y'
    .tags
      - talk.tags.each do |tag|
        = link_to tag.name, '/'
    %hr
    :textile
      #{talk.s_descrip}
    = link_to "View the talk!", "/talks/#{talk.id}", :class => 't_link'
